<%- include('../partials/header') %>
<h1>Suppliers</h1>
<% if(currentUser){ %>
  <a href="/suppliers/new">New Supplier</a>
<% } %>
<ul>
  <% suppliers.forEach(s => { %>
    <li>
      <strong><%= s.name %></strong> - <%= s.address %> - <%= s.phone %>
      <% if(currentUser){ %>
        <a href="/suppliers/<%= s._id %>/edit">Edit</a>
        <form action="/suppliers/<%= s._id %>?_method=DELETE" method="POST" style="display:inline">
          <button>Delete</button>
        </form>
      <% } %>
    </li>
  <% }) %>
</ul>
<%- include('../partials/footer') %>
